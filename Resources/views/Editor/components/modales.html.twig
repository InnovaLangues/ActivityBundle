<!-- Modal Identity Sequence-->
<div class="modal fade" id="sequence-identity" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">{{ 'identity'| trans({}, 'activity_sequence_editor') }}</h4>
      </div>
      {% verbatim %}
      <div class="modal-body">
      <form class="form">
            <div class="form-group">
                <label for="sequence-id">Id</label>
                <input type="text" class="form-control" id="sequence-id" disabled value="{{ activitySequence.id }}">
            </div>
            <div class="form-group">
                <label for="sequence-name">Nom</label>
                <input type="text" class="form-control" id="sequence-name" value="{{ activitySequence.name }}">
            </div>
        </form>
      </div>
      {% endverbatim %}
    </div>
  </div>
</div>

